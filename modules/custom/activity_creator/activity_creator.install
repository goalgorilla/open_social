/**
 * Installs ultimate cron configuration.
 */
function activity_creator_update_10101(&$sandbox) {
  $config_file = drupal_get_path('module', 'activity_creator') . '/config/optional/ultimate_cron.job.activity_creator_cron.yml';
  if (is_file($config_file)) {
    $settings = Yaml::parse(file_get_contents($config_file));
    if (is_array($settings)) {
      $update_config = \Drupal::configFactory()
        ->getEditable('ultimate_cron.job.activity_creator_cron');
      $update_config->setData($settings)->save(TRUE);
    }
  }
}
