<div class="card__block card__block--list teaser--small">
  <span class="list-item__avatar list-item__avatar--medium">
      <img src="{{ profile_image }}"  alt={{ "profile image"|t }} class="{{ profile_class }}" />
  </span>
  <span class="list-item__text">
    <span class="teaser--small__title">
      {{ profile_name }}
    </span>

    {% if profile_function or profile_organization %}
      <div class="list-item__text--small">
        {% if profile_organization %}
          {{ '@function @ @organization'|t({'@function': profile_function, '@organization': profile_organization}) }}
        {% else %}
          {{ profile_function }}
        {% endif %}
      </div>
    {% endif %}
  </span>
</div>
