  return [
    'flag__follow_term' => [
      'base hook' => 'flag',
    ],
    'activity__followed' => [
      'base hook' => 'activity',
    ],
    'activity__node__followed' => [
      'base hook' => 'activity',
    ],
  ];
}

/**
 * Implements hook_social_user_account_header_account_links().
 *
 * Adds the "Following tags" link to the user menu.
