{{ attach_library('core/drupal.dialog.ajax') }}
{{ attach_library('social_post_album/social-post-album--popup') }}

<div class="row social-post-album--popup">
  <div class="social-post-album--popup-slider">
    <div class="social-post-album--popup-slider-wrapper" dir="ltr">
      {% for url in urls %}
        <div class="social-post-album--popup-item" data-active-post="post-index-{{ pid }}">
          <img src="{{ url }}">
        </div>
      {% endfor %}
    </div>
  </div>

  <div class="post-comment-wrapper" data-active-post="post-index-{{ pid }}">
    <div class="post-message">
      {{ post }}
    </div>
  </div>

</div>
