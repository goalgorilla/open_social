extends ./layout/base-lu.jade

block title
  title Michael Angarano

block pagetitle
  .container.hero-container.hidden-xs
    .cover
      .cover-wrap
        h1.page-title.h2 John Johnson
        p Receptionist - Bastion Hotels
        img.img-circle.img-medium(src='content/images/avatar1.jpg')

  .container  
    .visible-xs-block.section
      a.btn.btn-raised.btn-user(href="my-stream.html")
        i.material-icons.pull-left keyboard_arrow_left
        | Back to my stream

  .container.hero-container
    .brand-secondary.z-depth-1.hidden-xs
      nav(role="navigation" aria-label="Tabs")
        h2.visually-hidden Secondary navigation
        ul.nav.nav-tabs.tabs-center.brand-secondary.nav-tabs--xl
          li
            a(href="my-stream.html") Stream  
          li
            a(href="my-profile-about.html") About
          li
            a(href='my-topics.html') Topics
          li.active
            a(href='my-events.html') Events 
            span.visually-hidden (active tab) 
          li
            a(href="my-groups.html") Groups
      
block content
  
  .row
  
    .col-xs-12
      h2.h3.section-title My events
    
    .col-xs-12.col-sm-3.pull-right.margin-bottom-l
      a.waves-effect.waves-light.btn.btn-block.btn-user.btn-raised(href='node-add-event.html') 
        i.material-icons.pull-left add
        | Create new event

      button.waves-effect.waves-light.btn.btn-block.btn-primary.btn-raised.visible-xs-block.js-open-canvas
        i.material-icons.pull-left tune
        | Filters
      
      br 
      br
      
      .off-canvas.off-canvas-right.off-canvas-xs-only.visible-sm-card
        .offcanvas-head
          header.card__label filter
          .offcanvas-tools.visible-xs-block
            button.js-close-canvas.btn.btn-icon-toggle.btn-default-light.pull-right
              i.material-icons close
    
        .offcanvas-body
          form
            .form-group.radios
              label Event status 
              .radio
                input#radio1(name='event', type='radio', checked)
                label(for='radio1') Upcoming
              .radio
                input#radio2(name='event', type='radio')
                label(for='radio2') Past
              .radio
                input#radio3(name='event', type='radio')
                label(for='radio3') Unpublished
            .form-group.margin-top-l.clearfix.visible-xs-block
                button.btn.btn-default.js-close-canvas.pull-right Done
              

    .col-xs-12.col-sm-9
      include molecules/_event1.jade
      include molecules/_event2.jade
      include molecules/_event3.jade
      include molecules/_event4.jade
        
      nav
        ul.pagination
          li.pager__item.pager__item--previous.disabled
            a(href="#0", aria-label='Previous')    
              span(aria-hidden="true") 
                i.material-icons chevron_left
          li.pager__item.active
            a(href="#1") 1
          li.pager__item 
            a(href="#1") 2
          li.pager__item 
            a(href="#1") 3          
          li.pager__item 
            a(href="#1") 4
          li.pager__item.pager__item--next
            a(href='#', aria-label='Next')
              span(aria-hidden="true")
                i.material-icons chevron_right
