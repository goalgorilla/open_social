{
  "version": "0.2",
  "language": "en-US",
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./cspell.words.txt",
      "addWords": true
    }
  ],
  "dictionaries": [
    "project-words",
    "softwareTerms"
  ],
  "overrides": [
    {
      "filename": "**/{*.inc,*.install,*.module}",
      "languageId": "php"
    },
    {
      "filename": "**/*.html.twig",
      "languageId": "html,php"
    }
  ],
  "ignorePaths": [
    "/cspell.words.txt",
    "/cspell.json",
    "node_modules",
    "vendor",
    ".github",
    ".tugboat",
    ".browserslistrc",
    ".gitignore",
    "**/{*.sql,*.po,*.pot,*.neon}",
    "/translations.php"
  ]
}
