extends ./layout/base-lu.pug

block title
  title John Johnson

block pagetitle
  .container.hero-container.hidden-xs
    include ./molecules/_my-profile-hero.pug

  .container
    .visible-xs-block.section
      a.btn.btn-flat(href="my-stream.html")
        svg.btn-icon
          use(xlink:href='#icon-navigate_before')
        | Back to my stream

  .container.hero-container
    .brand-secondary.z-depth-1.hidden-xs
      nav(role="navigation" aria-label="Tabs")
        h2.visually-hidden Secondary navigation
        ul.nav.nav-tabs.tabs-center.brand-secondary.nav-tabs--xl
          li.hidden-xs
            a(href="my-stream.html") Stream
          li
            a(href="my-profile-about.html") About
          li.active
            a(href='my-topics.html') Topics
            span.visually-hidden (active tab)
          li
            a(href='my-events.html') Events
          li
            a(href="my-groups.html") Groups

block content

  .row.margin-top-l

    .col-xs-12.col-sm-4.col-sm-last.margin-bottom-l.complementary-top
      a.waves-effect.waves-light.btn.btn-primary.btn-raised.btn-block(href='node-add-topic.html') Create topic
      br
      br
      btn.waves-effect.waves-light.btn.btn-default.btn-block.btn-raised.visible-xs-inline-block.js-open-canvas
        svg.pull-left.btn-icon.icon-black
          title Filter list
          use(xlink:href='#icon-filter_list')
        | Filter
      .off-canvas.off-canvas-right.off-canvas-xs-only
        .offcanvas-head
          header.card__label filter
          .offcanvas-tools.visible-xs-block
            .js-close-canvas.btn.btn-icon-toggle.pull-right
              svg.pull-left.btn-icon.icon-black
                title Close
                use(xlink:href='#icon-close')

        .offcanvas-body
          form
            .form-group
              label Topic type
              .select-wrapper
                select.form-control(onchange="enableMe('reset-button', this)")
                  option(value="", selected="") All types
                  option(value="blog") Blog
                  option(value="discussion") Discussion
                  option(value="topic") Topic
            .form-group
              label Status
              .select-wrapper
                select.form-control(onchange="enableMe('reset-button', this)")
                  option(value="", selected="") All statusses
                  option(value="published") Published
                  option(value="unpublished") Unpublished
            .form-group
              input#reset-button.btn.btn-link.disabled(type="submit", value="Reset")

    .col-xs-12.col-sm-8
      h4.section-title My topics
      include molecules/_topic1.pug
      include molecules/_topic2.pug
      include molecules/_topic3.pug
      include molecules/_topic4.pug

      include molecules/_pager.pug

block scriptinline

  script.
    function enableMe() {
      jQuery('#reset-button').removeClass('disabled');
    }
