block content

  .row.margin-top-l

    .col-sm-4.col-sm-last.complementary-top

      include ./molecules/_my-events.pug
      include ./molecules/_my-topics.pug
      include ./molecules/_my-groups.pug

    .col-xs-12.col-sm-8

      h4.section-title.section-title-stream My stream

      ul.stream
        li.stream-item
          i.stream-icon.stream-icon-new
          .card.stream-card
            .card-body
              include ./molecules/_stream-post-form.pug
        li.stream-item
          i.stream-icon
          .card.stream-card
            .card-body
              include ./molecules/_stream-post1.pug
        li.stream-item
          i.stream-icon
          .card.stream-card
            .card-body
              include ./molecules/_stream-post2.pug

        li.stream-item
          i.stream-icon
          .card.stream-card
            .card-body
              include ./molecules/_stream-post2.pug

        li.stream-item
          i.stream-icon
          .card.stream-card
            .card-body
              include ./molecules/_stream-post1.pug

block scriptinline

  script.
    function showMe (it, radio) {
      var visibility = radio.value;
      var icon = jQuery(radio).prevAll('svg').html();
      jQuery('#' + it).find('.text').html(visibility);
      jQuery('#' + it).find('svg').html(icon);
      jQuery('#' + it).next('.dropdown-menu').find('.list-group-item').removeClass('active');
      jQuery(radio).closest('.list-group-item').addClass('active');
    }
