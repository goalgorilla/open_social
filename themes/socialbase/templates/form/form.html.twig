{#
/**
 * @file
 * Default theme implementation for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 *
 * @ingroup themeable
 */
#}

{% if attributes.hasClass('card') %}
  <form{{ attributes.removeClass('card') }}>
    <div class="card brand-border-radius">
      <div class="card__block">
        {{ children }}
    </form>

    {#
      The card is closed function socialbase_form_alter in the info_text suffix
    #}

{% elseif is_search_form %}

  {% if in_hero_region %}

    <form{{ attributes }}>
      <div class="form-group">
        {{ children }}
      </div>
    </form>

  {% else %}

    <form{{ attributes }}>
      <div class="form-group" id="navbar-search">
        {{ children }}
      </div>
    </form>

  {% endif %}

{% else %}

  <form{{ attributes }}>
    {{ children }}
  </form>

{% endif %}
