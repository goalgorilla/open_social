{#
/**
 * @file
 * Theme override for confirm form.
 *
 * We add a card element around these forms.
 *
 * Available variables:
 * - form: The confirm form.
 *
 * @ingroup themeable
 */
#}

{% if attributes.hasClass('is_modal') or attributes.hasClass('layout-builder-remove-section') or attributes.hasClass('layout-builder-remove-block') %}
 {{ form }}
{% else %}
  <div class="card">
    <div class="card__block">
      {{ form }}
    </div>
  </div>
{% endif %}
