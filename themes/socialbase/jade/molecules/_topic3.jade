.card.card--teaser.card-with-actionbar.unpublished
  a.card-image(href="topic.html")
    .teaser-type
      img(src='images/icon-topic.svg', alt='')
    img.img-responsive(src='content/images/people3-square.jpg', alt='')
    .status unpublished
  .card-body
    h4.card-title 
      a(href="topic.html") 5 new cool features in Office 365
    p.text-grey-dark.no-margin
      if user == "isAnonymous"
        | Dennis Rodman 
      else
        a(href="other-stream.html") Dennis Rodman 
        | &bullet; 28 mar 2016
    p.no-margin
      i.material-icons label 
      | &nbsp;
      span.inline-center Blog
    
    .card-actionbar
      .badge.badge-gray-lighter.badge--toggle
        label
          input(type='checkbox')
          i.material-icons group        
          span.badge--toggle__label community
      a.btn.btn-flat.pull-right(href="topic.html") Read more
